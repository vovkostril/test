<% include layout/header.ejs %>

    <header class="header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-7"></div>
                <div class="col-5 align-self-left">
                    <div class="reg_form">

                        <div class="colourtext">
                            <h5 class="display-5">
                                <p>LOG IN as a KNOWN USER?</p>
                            </h5>
                        </div>

                        <form method="POST" class="create">
                            <div class="form-group">
                                <input type="text" class="form-control" id="create-login" placeholder="Enter login">
                                <br>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="create-password" placeholder="Enter password">
                            </div>

                            <button type="submit" class="create-button btn btn-warning my-2 my-sm-0">checkIN</button>

                        </form>

                        <div class="colourtext">
                            <h5 class="display-5">
                                <p>or</p>
                                <p>WANT to REGISTER?</p>
                            </h5>
                        </div>

                        <form method="POST" class="login">
                            <div class="form-group">
                                <div class="colourtext">
                                    <label for="login-login">your LOGIN</label>
                                </div>
                                <input type="text" class="form-control" id="login-login" placeholder="Enter login">
                                <br>
                            </div>
                            <div class="form-group">
                                <div class="colourtext">
                                    <label for="login-password">your PASSWORD</label>
                                </div>
                                <input type="text" class="form-control" id="login-password" placeholder="Enter password">
                            </div>

                            <button type="submit" class="login-button btn btn-warning my-2 my-sm-0">REGISTER</button>
                        </form>


                        <br>

                        <button type="submit" class="guest-button btn btn-outline-success my-2 my-sm-0" onclick="click_main">GOasGUEST</button>



                    </div>
                </div>
            </div>
        </div>
        </div>
    </header>

